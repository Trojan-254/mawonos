<script>
// Mobile Menu Toggle
document.addEventListener('DOMContentLoaded', function() {
    const mobileFilterBtn = document.getElementById('mobileFilterBtn');
    const mobileFilterSidebar = document.getElementById('mobileFilterSidebar');
    const closeFilterBtn = document.getElementById('closeFilterBtn');
    
    // Open filter sidebar
    mobileFilterBtn.addEventListener('click', function() {
        mobileFilterSidebar.classList.remove('hidden');
        document.body.style.overflow = 'hidden'; // Prevent scrolling
    });
    
    // Close filter sidebar
    closeFilterBtn.addEventListener('click', function() {
        mobileFilterSidebar.classList.add('hidden');
        document.body.style.overflow = 'auto'; // Enable scrolling
    });
    
    // Close sidebar when clicking outside
    mobileFilterSidebar.addEventListener('click', function(e) {
        if (e.target === mobileFilterSidebar) {
            mobileFilterSidebar.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    });
    
    // Color options selection
    const colorOptions = document.querySelectorAll('.color-option');
    colorOptions.forEach(option => {
        option.addEventListener('click', function() {
            colorOptions.forEach(opt => opt.classList.remove('selected'));
            this.classList.add('selected');
        });
    });
    
    // Price range slider update
    const priceSlider = document.querySelector('.price-slider');
    const maxPriceInput = document.querySelectorAll('input[type="number"]')[1];
    
    priceSlider.addEventListener('input', function() {
        maxPriceInput.value = this.value;
    });
    
    maxPriceInput.addEventListener('input', function() {
        priceSlider.value = this.value;
    });
});
</script>
